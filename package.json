{
	"name": "hkilang-tts",
	"version": "0.0.0",
	"description": "香港本土語言文字轉語音朗讀器",
	"type": "module",
	"scripts": {
		"start": "parcel public/index.html --dist-dir build --open --port 3000",
		"build": "parcel build public/index.html --dist-dir build --public-url /TTS --no-cache"
	},
	"dependencies": {
		"eastasianwidth": "^0.3.0",
		"react": "^18.3.1",
		"react-dom": "^18.3.1"
	},
	"devDependencies": {
		"@parcel/packager-raw-url": "^2.12.0",
		"@parcel/transformer-webmanifest": "^2.12.0",
		"@types/react": "^18.3.3",
		"@types/react-dom": "^18.3.0",
		"@typescript-eslint/eslint-plugin": "^7.12.0",
		"@typescript-eslint/parser": "^7.12.0",
		"daisyui": "^3.9.4",
		"eslint": "^8.57.0",
		"eslint-plugin-import": "^2.29.1",
		"eslint-plugin-jsx-a11y": "^6.8.0",
		"eslint-plugin-no-array-concat": "^0.1.2",
		"eslint-plugin-react": "^7.34.2",
		"eslint-plugin-react-hooks": "^4.6.2",
		"eslint-plugin-react-refresh": "^0.4.7",
		"parcel": "^2.12.0",
		"parcel-namer-rewrite": "^2.10.3-rc.2",
		"parcel-transformer-papaparse": "^0.1.0",
		"postcss-nesting": "^12.1.5",
		"tailwindcss": "^3.4.3",
		"typescript": "^5.4.5"
	},
	"alias": {
		"process": false
	},
	"parcel-namer-rewrite": {
		"rules": {
			"[^/\\\\]*\\.(png|svg)$": "assets/$&"
		}
	},
	"browserslist": "> 0.5% in HK and fully supports es6-module and not dead",
	"license": "MIT",
	"homepage": "TTS/"
}
